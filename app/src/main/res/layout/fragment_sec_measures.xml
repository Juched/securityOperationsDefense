<?xml version="1.0" encoding="utf-8"?>

<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/secGrid"
    tools:context=".ui.upgrades.SecMeasuresFragment"
    app:columnCount="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            app:layout_column="0"
            app:layout_row="0"
            android:clickable="true"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/upgradeOneName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Boost employee morale"
                android:textColor="@color/black"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/upgradeTwoName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Boost employee morale"
                android:textColor="@color/black"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:padding="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/upgradeThreeName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Boost employee morale"
                android:textColor="@color/black"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:padding="10dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/upgradeFourName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Boost employee morale"
                android:textColor="@color/black"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

   

</androidx.gridlayout.widget.GridLayout>

