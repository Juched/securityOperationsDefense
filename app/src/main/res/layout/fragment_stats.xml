<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.upgrades.StatsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/rateCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_column="0"
            app:layout_row="0"
            android:clickable="true"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attack Rate"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_margin="7dp"
                    android:id="@+id/attackRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/black" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <androidx.cardview.widget.CardView
                android:id="@+id/att1"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                app:layout_column="0"
                app:layout_row="0"
                android:clickable="true"
                app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/att1t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Att Type 1"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/att1t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Attack Cost: $5"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/att2"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/att2t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Att Type 1"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/att2t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Attack Cost: $5"
                        android:textColor="@color/black" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <androidx.cardview.widget.CardView
                android:id="@+id/att3"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                app:layout_column="0"
                app:layout_row="0"
                android:clickable="true"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/att3t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Att Type 1"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/att3t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Attack Cost: $5"
                        android:textColor="@color/black" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/att4"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/att4t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Att Type 1"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/att4t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Attack Cost: $5"
                        android:textColor="@color/black" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <androidx.cardview.widget.CardView
                android:id="@+id/att5"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                app:layout_column="0"
                app:layout_row="0"
                android:clickable="true"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/att5t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Att Type 1"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/att5t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Attack Cost: $5"
                        android:textColor="@color/black" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/att6"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/att6t"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Att Type 1"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/att6t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Attack Cost: $5"
                        android:textColor="@color/black" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>